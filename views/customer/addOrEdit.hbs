<title>Add/Edit Customer</title>
<h3>{{viewTitle}}</h3>

<form action="/customer" method="POST" autocomplete="off">
    <input type="hidden" name="_id" value="{{customer._id}}">
    <div class="form-group">
        <label>Full Name</label>
        <input type="text" class="form-control" name="fullName" placeholder="Full Name" value="{{customer.fullName}}">
        <div class="text-danger">
            {{customer.fullNameError}}</div>
    </div>
    <div class="form-group">
        <label>Email</label>
        <input type="text" class="form-control" name="email" placeholder="Email" value="{{customer.email}}">
        <div class="text-danger">
            {{customer.emailError}}</div>
    </div>
    <div class="form-row">
        <div class="form-group col-md-6">
            <label>ext</label>
            <input type="text" class="form-control" name="ext" placeholder="Extension" value="{{customer.ext}}">
        </div>
        <div class="form-group col-md-6">
            <label>Room</label>
            <input type="text" class="form-control" name="room" placeholder="Room Number" value="{{customer.room}}">
        </div>
    </div>
    <div class="form-group">
        <button type="submit" class="btn btn-info"><i class="fa fa-database"></i> Submit</button>
        <a class="btn btn-secondary" href="/customer/list"><i class="fa fa-list-alt"></i> View All</a>
    </div>
</form>